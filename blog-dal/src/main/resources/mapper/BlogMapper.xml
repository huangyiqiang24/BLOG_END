<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="huayq.cn.blog.dal.mapper.BlogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="BlogDO">
        <id column="ID" property="id" />
        <result column="BLOG_NO" property="blogNo" />
        <result column="TITLE" property="title" />
        <result column="CONTENT" property="content" />
        <result column="DESCRIPTION" property="description" />
        <result column="VIEWS" property="views" />
        <result column="TAG" property="tag" />
        <result column="CREATED_AT" property="createdAt" />
        <result column="CREATED_BY" property="createdBy" />
        <result column="UPDATED_AT" property="updatedAt" />
        <result column="UPDATED_BY" property="updatedBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID,
        BLOG_NO,
        TITLE,
        CONTENT,
        DESCRIPTION,
        VIEWS,
        TAG,
        CREATED_AT,
        CREATED_BY,
        UPDATED_AT,
        UPDATED_BY
    </sql>

    <!-- 1.查询博客 -->
    <select id="selectById" resultMap="BaseResultMap" parameterType="String">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
        T_BLOG
        WHERE
            BLOG_NO = #{blogNo}
    </select>

    <!-- 2.新增博客 -->
    <insert id="insert" parameterType="BlogDO">
        INSERT  INTO
            T_BLOG(
                ID,
                BLOG_NO,
                TITLE,
                CONTENT,
                DESCRIPTION,
                VIEWS,
                TAG,
                CREATED_AT,
                CREATED_BY,
                UPDATED_AT,
                UPDATED_BY
        )VALUES (
                #{id},
                #{blogNo},
                #{title},
                #{content},
                #{description},
                #{views},
                #{tag},
                now(),
                #{createdAt},
                now(),
                #{updatedAt})
    </insert>

    <!-- 3.修改博客 -->
    <update id="update" parameterType="BlogDO">
        UPDATE
            T_BLOG
        <set>
            <if test="tittle != null and tittle != ''">
                TITTLE = #{title},
            </if>
            <if test="content != null and content != ''">
                CONTENT = #{content},
            </if>
            <if test="description != null and description != ''">
                DESCRIPTION = #{description},
            </if>
            <if test="tag != null and tag != ''">
                TAG = #{tag},
            </if>
            <if test="updated_by != null and updated_by != ''">
                UPDATED_BY = #{updatedBy},
            </if>
                UPDATED_AT = now()
        </set>
        WHERE
            BLOG_NO = #{blogNo}
    </update>

    <!-- 4.分页查询博客 -->
    <select id="selectByPage" resultType="pageDO">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            T_BLOG
        ORDER BY UPDATED_AT
        limit #{startIndex,jdbcType=DECIMAL} <![CDATA[,]]> #{pageSize,jdbcType=DECIMAL}
    </select>

</mapper>
